class PB_CurbstompedMarine : Actor 
{
	Default
	{ 
		+MOVEWITHSECTOR;
		+FLOORCLIP;
		+FORCEXYBILLBOARD;
		+SHOOTABLE;
		+GHOST;
		//+CLIENTSIDEONLY;
		+NOTAUTOAIMED;
		+CORPSE;
		+NOTELEPORT;
		Mass 5000;
		Health 300;
		PainChance 255;
		Mass 6000;
		Radius 8;
		Height 8;
		bloodtype "DeadBlood";
		damagefactor "Crush", 9999.00;
		damagefactor "Crusher", 9999.00;
		damagefactor "CrushedBodies", 9999.00;
		damagefactor "Blood", 0.0;
		damagefactor "GreenBlood", 0.0;
		damagefactor "BlueBlood", 0.0;
		damagefactor "Taunt", 0.0;
		damagefactor "KillMe", 0.0;
		damagefactor "TeleportRemover", 1000.0;
		damagefactor "GibRemoving", 0.5;
		damagefactor "Normal", 2.0;
		damagefactor "Desintegrate", 990.0;
		damagefactor "BFG", 990.0;
		damagefactor "Kick", 3.0;
		damagefactor "SuperKick", 3.0;
		damagefactor "ExtremePunches", 2.0;
		damagefactor "SuperPunch", 2.0;
	}
	States 
	{
		Spawn:
			PLDH A -1;
			Stop;
		Death:
		Death.Stomp:
			TNT1 A 0 A_NoBlocking();
			TNT1 A 0 A_SpawnItem("PB_GibsZ");
			TNT1 AAA 0 A_CustomMissile ("PB_XDeath1", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AAAAAAAA 0 A_CustomMissile ("PB_SmallGib", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AA 0 A_CustomMissile ("pb_XDeath3", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AAA 0 A_CustomMissile ("NashGoreBloodSpurt", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AAAAAAA 0 A_CustomMissile ("PB_XDeathSkinPiece2", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AAAA 0 A_CustomMissile ("PB_XDeathSkinPiece1", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AA 0 A_CustomMissile ("pb_XDeath4", 10, 0, random (0, 360), 2, random (10, 170));
			TNT1 AAAAA 0 A_CustomMissile ("PB_BloodMistSmall", 15, 0, random (0, 360), 2, random (40, 90));
			Stop;
		Death.plasma:
			TNT1 AAA 0 A_CustomMissile ("NashGoreBloodSpurt", 50, 0, random (0, 360), 2, random (0, 160));
			TNT1 A 0 A_XScream();
		Death.Fire:
		Death.Burn:
		Death.Flames:
			TNT1 A 0 A_NoBlocking();
			TNT1 A 0 A_CustomMissile ("PB_XDeathBurnedMeat", 32, 0, random (0, 360), 2, random (0, 160));
			TNT1 A 0 A_CustomMissile ("PB_XDeathBurnedMeat2", 32, 0, random (0, 360), 2, random (0, 160));
			TNT1 A 0 A_CustomMissile ("PB_XDeathBurnedMeat3", 32, 0, random (0, 360), 2, random (0, 160));
			EXPL AAA 0 A_CustomMissile ("ExplosionSmoke", 32, 0, random (0, 360), 2, random (0, 360));
			TNT1 A 0 A_SpawnItem("PB_GoryAshes");
			Stop;
		Death.TeleportRemover:
		Death.GibRemoving:
			TNT1 A 0 A_NoBlocking();
			TNT1 A 0 A_ChangeFlag("NOCLIP", 1);
			TNT1 A 0 A_ChangeFlag("SHOOTABLE", 0);
			TNT1 A 0 A_ChangeFlag("NOBLOCKMAP", 1);
			Stop;
		
		Death.CrushedBodies:
		Death.Crush:
		Crush:
			TNT1 A 0 A_NoBlocking();
			TNT1 A 0 A_SetAngle(0);
			TNT1 AAAAAAA 0 A_CustomMissile ("PB_XDeath1", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AAAAAAAAAAAA 0 A_CustomMissile ("PB_SmallGib", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AA 0 A_CustomMissile ("pb_XDeath3", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AAA 0 A_CustomMissile ("NashGoreBloodSpurt", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AAAAAAA 0 A_CustomMissile ("PB_XDeathSkinPiece2", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AAAA 0 A_CustomMissile ("PB_XDeathSkinPiece1", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 AA 0 A_CustomMissile ("pb_XDeath4", 10, 0, random (0, 360), 2, random (10, 170));
			TNT1 AAAAAAAAAA 0 A_CustomMissile ("PB_BloodMistSmall", 15, 0, random (0, 360), 2, random (40, 90));
			TNT1 A 0 A_SpawnItemEx("NashGoreSquishyGibs", flags: SXF_TRANSFERTRANSLATION);
			TNT1 A 0 A_SpawnItem ("PB_CrushedRemains");
			TNT1 A 1 A_XScream();
			Stop;
		
		Death.Desintegrate:
			TNT1 AAAA 0 A_CustomMissile ("NashGoreBloodSpurt", 0, 0, random (0, 360), 2, random (0, 90));
			TNT1 AAAAAAAAAAAA 0 A_CustomMissile ("PB_SmallGib", 5, 0, random (0, 360), 2, random (0, 160));
			TNT1 A 0 A_CustomMissile ("PB_BloodMistLarge", 7, 0, random (0, 360), 2, random (30, 60));
			TNT1 AA 0 A_CustomMissile ("BloodMistSmall", 7, 0, random (0, 360), 2, random (30, 60));
			TNT1 A 0 A_SpawnItem("GibsZ");
			Stop;
	}
}


