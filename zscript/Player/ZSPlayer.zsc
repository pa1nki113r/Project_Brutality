class PB_VoodooDoll : PB_PlayerPawn
{
    override void PostBeginPlay() {}
    
	Default
	{
		+NOPAIN;
		BloodColor "Purple";
		+ROLLSPRITE
		+ROLLCENTER
		+FLOATBOB
	}
	
    States
    {
    Spawn:
		TNT1 A 0;
		TNT1 A 2;
	Death:
	XDeath:
	VooDoo:
        PLFA A 1
		{
			A_SetRoll(roll+(random(4,6)), SPF_INTERPOLATE);
			A_SetAngle(angle+(random(4,6)), SPF_INTERPOLATE);
			A_SetPitch(pitch+(random(4,6)), SPF_INTERPOLATE);
		}
        loop;
    }
}
