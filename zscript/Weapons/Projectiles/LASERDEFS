class CryoRifleBeam : MWLaser
{
	Default
	{
		Damage 2;
		Scale 0.5;
		DamageType "Freeze";
		speed 320;
		MWLaser.frontOffset -100;
		MWLaser.range 9000;
		MWLaser.laserSprite "X027";
		MWLaser.laserSize 0.15;
		MWLaser.speedFactor 2.0;
		Radius 4;
		Height 8;
		+NODAMAGETHRUST;
		+NODECAL;
		Decal "NoBlood"; //NoBlood decal used so there are no burn marks (due to the lack of a no decal flag for missiles)
	}
	states
	{
		Death:	
			TNT1 A 0;
			BXPL A 0 Bright A_Explode(11, 25, 0);
			BXPL A 0 Bright A_Explode(10, 15, 0);
			TNT1 A 0 Bright A_Jump (135, "realdeath");
			TNT1 A 0 A_SpawnItemEx ("RandomMediumIcecrystal",random(-30,30), random(-30,30),random(1,20),0,0,0,0,SXF_NOCHECKPOSITION,0);
			TNT1 AAAAA 0 A_SpawnItemEx ("RandomSmallIcecrystal",random(-30,30), random(-30,30),random(1,20),0,0,0,0,SXF_NOCHECKPOSITION,0);
		realdeath:
			BXPL A 0 Bright A_StopSound(CHAN_BODY);
			BXPL ABCDEFGH 1 Bright;
			BXPL IJKLM 1 Bright A_FadeOut(0.1);
			stop;
	}
}  