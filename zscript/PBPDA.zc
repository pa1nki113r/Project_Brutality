			PDAMode = false;
			MouseX = 1;
			MouseY = 1;
			MousePositionSet = false;
			MouseClicked = false;
			MonsterMenuOpened = false;
			WeaponMenuOpened = False;
			NonMainMenu = false;
		}
		if (e.Name ~== "openpda")
		{
			if (isnetgame) return;
			SetPlayerProperty(1,1,4);
