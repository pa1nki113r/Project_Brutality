	override void WorldThingDamaged(WorldEvent e)
	{
		if (e.thing is "DoomImp" 
		&& e.thing.target
		&& e.thing.bCOUNTKILL
		&& e.thing.bISMONSTER
		&& e.DamageType == "Melee"
		&& !e.thing.target.player)
		{
			e.thing.A_TakeInventory("SKImp",1); // Make sure it does not disappear.
			e.thing.A_TakeInventory("SKImp2",1); 
			e.thing.A_TakeInventory("SKImp3",1); 
			e.thing.A_TakeInventory("SKDarkImpNami",1);
			e.thing.A_TakeInventory("SKDarkImpNether",1);
			e.thing.A_TakeInventory("SKDarkImpST",1);
			e.thing.A_TakeInventory("SKDarkImpVoid",1);
		}
	}
