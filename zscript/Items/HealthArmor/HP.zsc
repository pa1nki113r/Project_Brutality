class PB_HealthBonus : PB_Health
{
    Default
    {
		//$Category Project Brutality - Health and Armor
		//$Sprite BON1A0
		Tag "Health Bonus";
		+COUNTITEM;
		+INVENTORY.ALWAYSPICKUP;
        Inventory.Amount 1;
	    Inventory.MaxAmount 500;
        Inventory.PickupSound "misc/hbonus_PickUp";
		Inventory.PickupMessage "$GOTHTHBONUS";
		Scale .19;
    }

    States
    {
		Spawn:
			BON1 ABCDEFGHIJ 3;
			loop;
    }
}

class PB_ArmorBonusDropped : PB_HealthBonus
{
    Default
    {
		//Dropped version that doesnt count towards item total
		-COUNTITEM;
		-INVENTORY.ALWAYSPICKUP;
        Inventory.Amount 1;
	    Inventory.MaxAmount 500;
    }
}

class PB_DemonHPBonus : PB_HealthBonus
{
	Default
	{
		Inventory.Amount 1;
		Inventory.MaxAmount 500;
	}
}

