{
	Game Doom
	+FLOORCLIP
	+DONTGIB
	ConversationID 177, 170, 174
	Inventory.Amount 6
	Inventory.MaxAmount 25
	Ammo.BackpackAmount 6
	Ammo.BackpackMaxAmount 50
