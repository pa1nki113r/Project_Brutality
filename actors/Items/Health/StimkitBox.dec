ACTOR NormalStimkitBoxGreen : CustomInventory
{
	+DONTGIB
	+FLOORCLIP
	Inventory.PickupMessage "Picked up a box of Portable Stimkits."
	Inventory.PickupSound "misc/E_HP_pickup"
	Scale 1
	States
	{
	Spawn:
		M4DI A -1
		Stop
	Pickup:
	    M4DI A 0 A_GiveInventory("Stimkit", 3)
		Stop
	}
}

