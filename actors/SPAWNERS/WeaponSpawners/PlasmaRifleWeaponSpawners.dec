		Stop
	SpawnPB_LightningGun:
		TNT1 A 1 ACS_NamedExecuteAlways("ToggleWeaponM2Plasma",0)
		TNT1 A 1 A_RadiusGive("IsNearPlasmaWeapon", 480, RGF_GIVESELF | RGF_CUBE | RGF_MONSTERS | RGF_ITEMS | RGF_NOSIGHT, 1)
