			TNT1 A 0 A_Jump(36, "SpawnPB_FreezerRifle")
			TNT1 A 0 A_Jump(84, "SpawnPB_M2Plasma")
			TNT1 A 0 A_Jump(256, "SpawnPB_PlasmaRifle")
