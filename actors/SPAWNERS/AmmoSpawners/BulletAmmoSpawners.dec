		TNT1 A 0 A_JumpIfInventory("IsClipBoxBig", 1, "SpawnHighCalClip")
		TNT1 A 0 A_JumpIfInventory("IsClipBox", 1, "SpawnHighCalClip")
		TNT1 A 0 A_JumpIfInventory("IsLowCalAmmo", 1, "SpawnLowCalClip")
