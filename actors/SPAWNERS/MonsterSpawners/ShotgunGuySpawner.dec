	AutoShotgunGuyPack:
		TNT1 A 0 A_RadiusGive("IsAutoShotgunGuy", 290, RGF_GIVESELF | RGF_MONSTERS | RGF_ITEMS | RGF_NOSIGHT, 1)
		Stop
	HelmetShotgunGuyPack:
		TNT1 A 0 A_RadiusGive("IsHelmetShotgunGuy", 290, RGF_GIVESELF | RGF_MONSTERS | RGF_ITEMS | RGF_NOSIGHT, 1)
		Stop
	MixedShotgunGuyPack:
		TNT1 A 0 A_RadiusGive("IsMixedShotgunGuyPack", 290, RGF_GIVESELF | RGF_MONSTERS | RGF_ITEMS | RGF_NOSIGHT, 1)
		Stop
	NormalShotgunGuyPack:
		ReplaceBrutalOnly:
		ReplaceVanilla:
		ReplaceTraditional:
		TNT1 A 0 A_RadiusGive("IsNormalShotgunGuy", 290, RGF_GIVESELF | RGF_MONSTERS | RGF_ITEMS | RGF_NOSIGHT, 1)
		Stop	
	}
}

Actor ShotgunGuyPackSpawner : Demonpickup
{
	+LOOKALLAROUND
	States
	{
	Spawn:
		TNT1 A 3
		TNT1 A 0 A_JumpIfInventory("IsPlayingChaoticRandom", 1, "RandomSpawn")
		TNT1 A 0 A_JumpIfInventory("IsHellTrooper", 1, "SpawnHellTrooper")
		TNT1 A 0 A_JumpIfInventory("IsPyroSergeant", 1, "SpawnPyroSergeant")	
		TNT1 A 0 A_JumpIfInventory("IsRocketLauncherGuy", 1, "SpawnRocketLauncherGuy")
		TNT1 A 0 A_JumpIfInventory("IsQuadShotgunGuy", 1, "SpawnQuadShotgunGuy")
		TNT1 A 0 A_JumpIfInventory("IsRiotShieldGuy", 1, "SpawnRiotShieldGuy")
		TNT1 A 0 A_JumpIfInventory("IsZspecOpsGuy", 1, "SpawnZspecOpsGuy")
		TNT1 A 0 A_JumpIfInventory("IsAutoShotgunGuy", 1, "SpawnAutoShotgunGuy")
		TNT1 A 0 A_JumpIfInventory("IsMixedShotgunGuyPack", 1, "SpawnMixedShotgunGuyPack")
		TNT1 A 0 A_JumpIfInventory("IsHelmetShotgunGuy", 1, "SpawnHelmetShotgunGuy")
		TNT1 A 0 A_JumpIfInventory("IsNormalShotgunGuy", 1, "SpawnNormalShotgunGuy")
		Loop	
	RandomSpawn:
		TNT1 A 0 A_Jump(256, "SpawnHellTrooper", "SpawnPyroSergeant", "SpawnRocketLauncherGuy", "SpawnQuadShotgunGuy", "SpawnRiotShieldGuy", "SpawnZspecOpsGuy", "SpawnAutoShotgunGuy", "SpawnHelmetShotgunGuy", "SpawnNormalShotgunGuy")
	SpawnMixedShotgunGuyPack:
		TNT1 A 0 A_Jump(256, "SpawnRocketLauncherGuy", "SpawnQuadShotgunGuy", "SpawnRiotShieldGuy", "SpawnZspecOpsGuy", "SpawnAutoShotgunGuy", "SpawnHelmetShotgunGuy", "SpawnNormalShotgunGuy")
		Stop
	SpawnHellTrooper:
		TNT1 A 1 ACS_NamedExecuteAlways("ToggleDemonTechSoldier",0)
		TNT1 A 0 A_SpawnItemEx("HellTrooper",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288,0,tid)
		Stop
	SpawnPyroSergeant:
		TNT1 A 1 ACS_NamedExecuteAlways("TogglePyroSergeant",0)
		TNT1 A 0 A_SpawnItemEx("PyroSergeant",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288,0,tid)
		Stop
	SpawnRocketLauncherGuy:
		TNT1 A 1 ACS_NamedExecuteAlways("ToggleRocketSergeant",0)
		TNT1 A 0 A_SpawnItemEx("RocketZombie",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288,0,tid)
		Stop
	SpawnQuadShotgunGuy:
		TNT1 A 1 ACS_NamedExecuteAlways("ToggleQuadShotgunZombie",0)
		TNT1 A 0 A_SpawnItemEx("QuadShotgunZombie",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288,0,tid)
		Stop
	SpawnRiotShieldGuy:
		TNT1 A 1 ACS_NamedExecuteAlways("ToggleRiotShieldGuy",0)
		TNT1 A 0 A_SpawnItemEx("RiotShieldGuy",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288,0,tid)
		Stop
	SpawnZspecOpsGuy:
		TNT1 A 1 ACS_NamedExecuteAlways("ToggleZSpecOps",0)
		TNT1 A 0 A_SpawnItemEx("ZSpecOpsMachinegun",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288,0,tid)
		Stop
	SpawnAutoShotgunGuy:
		TNT1 A 1 ACS_NamedExecuteAlways("ToggleAutoshotgunSergeant",0)
		TNT1 A 0 A_SpawnItemEx("ASGGuy",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288,0,tid)
		Stop
	SpawnHelmetShotgunGuy:
		TNT1 A 1 ACS_NamedExecuteAlways("ToggleHelmetSergeant",0)
		TNT1 A 0 A_SpawnItemEx("ShotgunGuy2",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288,0,tid)
		Stop
	SpawnNormalShotgunGuy:
		ReplaceToggle:
		TNT1 A 0 A_SpawnItemEx("ShotgunGuy1",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288,0,tid)
		Stop
	}
}