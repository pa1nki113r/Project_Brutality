			TNT1 A 0 A_Jump(54,"ZspecOpsGuyPack")
			TNT1 A 0 A_Jump(110,"AutoShotgunGuyPack")
			TNT1 A 0 A_Jump(96,"MixedShotgunGuyPack")
			TNT1 A 0 A_Jump(40,"HelmetShotgunGuyPack")
			TNT1 A 0 A_Jump(256,"NormalShotgunGuyPack")
