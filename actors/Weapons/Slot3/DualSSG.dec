	R6FR BCDEF 1
	R6FR GH 1
	TNT1 A 0 A_PlaySound("weapons/sshotc")
	R6FR IJ 1
	TNT1 A 0 A_PlaySound("weapons/sshotc")
	R6FR JIHGFEDCA 1
	P6SS ABCDE 1
