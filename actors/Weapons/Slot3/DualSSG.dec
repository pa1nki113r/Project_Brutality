	FinishUnload:
	P6SS EDCBA 1
	R6FL AB 1
	R6FL BCDEF 1
	R6FL GH 1
	TNT1 A 0 A_PlaySound("weapons/sshotc")
	R6FL IJ 1
	TNT1 A 0 A_PlaySound("weapons/sshotc")
	R6FL JIHGFEDCBA 1
	
