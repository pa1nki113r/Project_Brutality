        R6FR UV 1
		TNT1 A 0 A_JumpIfInventory("DualSSGAmmo",4,"EndOfReload")
		TNT1 A 0 A_JumpIfInventory("DualSSGAmmo",2,"LeftReload2")
		Goto EndOfReload
	
	LeftReload2:  
		TNT1 A 0 A_JumpIfInventory("NewShell", 1, 1)
		Goto ReadyToFire
		TNT1 A 0 A_TakeInventorY("NewShell", 1)
		TNT1 A 0 A_GiveInventory("DualSSGAmmo", 1)
