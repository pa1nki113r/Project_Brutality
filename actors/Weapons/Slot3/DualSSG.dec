	    TNT1 A 0 A_FireCustomMissile("SSGCaseSpawner",0,0,-10)
        SHT9 EEFFGGHH 1
	    R6FR OOPP 1
        TNT1 A 0 A_PlaySound("weapons/ssg/in", 8)
	    R6FR QRST 1 
