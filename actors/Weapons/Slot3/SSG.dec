			A_TakeInventory("SSGAmmoCounter", 1);
			A_ZoomFactor(0.98);
			}
		SHTA D 1 BRIGHT {
			A_ZoomFactor(0.99);
			//A_FireCustomMissile("GunFireSmoke", 0, 0, -2, 0, 0, 0);
			PB_GunSmoke(2,0,0);
			A_FireProjectile("ShotgunWad",random(-2,2),0,-4,-4,FPF_NOAUTOAIM,random(-2,2));
			PB_WeaponRecoil(-1.50,-1.0);
		}
		SHO8 C 1 {
			A_ZoomFactor(1.0);
			//A_FireCustomMissile("GunFireSmoke", 0, 0, -2, 0, 0, 0);
			PB_GunSmoke(2,0,0);
