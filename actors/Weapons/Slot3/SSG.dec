		TNT1 A 0 A_SetInventory("Unloading",0)
		TNT1 A 0 A_JumpIfInventory("PBSSGHasUnloaded", 1, "Ready3")
		TNT1 A 0 A_JumpIf(A_CheckAkimbo(), "UnloadDualWield")
		TNT1 A 0 A_JumpIfInventory("SSGAmmoCounter",1,1)
		Goto Ready3
