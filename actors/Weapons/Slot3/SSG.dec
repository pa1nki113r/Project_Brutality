		TNT1 A 0 A_PlaySoundEx("weapons/ssg/inspect4", "Auto")
		P6SS ABC 1 A_SetPitch(pitch-0.4, SPF_INTERPOLATE)
		TNT1 A 0 A_PlaySoundEx("weapons/ssg/inspect4", "Auto")
		P6SS DE 1 A_SetPitch(pitch+0.4, SPF_INTERPOLATE)
		Goto ReadyDualWield
		
