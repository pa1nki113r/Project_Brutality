		MG5C A 0 A_JumpIfInventory("NewClip", 14, 5)
		MG4C A 0 A_JumpIfInventory("NewClip", 12, 4)
		MG3C A 0 A_JumpIfInventory("NewClip", 10, 3)
		MG2C A 0 A_JumpIfInventory("NewClip", 8, 2)
		TNT1 A 0
		"####" ABCDDDDCBA 1
		MA25 A 0 A_JumpIfInventory("NewClip", 14, 5)
		MA24 A 0 A_JumpIfInventory("NewClip", 12, 4)
		MA23 A 0 A_JumpIfInventory("NewClip", 10, 3)
		MA22 A 0 A_JumpIfInventory("NewClip", 8, 2)
		TNT1 A 0
		"####" NNOPQRST 1
		Stop
	Reload:
		TNT1 A 0 A_JumpIf(CountInv("MG42HasOverheated") || CountInv("MG42BarrelOverheat") >= 1, "BarrelChange")
		Goto Ready3
	UnzoomOverheat:
		TNT1 A 0 {
		A_TakeInventory("Zoomed", 1);
		A_TakeInventory("ADSMode", 1);
		A_PlaySoundEx("IronSights", "Auto");
		A_Overlay(5, "BeltUnzoomFlash");
		A_ZoomFactor(1);
		A_PlaySound("MG42HEAT");
		PB_HandleCrosshair(75);
		}
		MRGZ DCB 1
		Goto Overheat+1
	UnzoomBarrelChange:
	TNT1 A 0 {
		A_TakeInventory("Zoomed", 1);
		A_TakeInventory("ADSMode", 1);
		A_PlaySoundEx("IronSights", "Auto");
		A_Overlay(5, "BeltUnzoomFlash");
		A_ZoomFactor(1);
		PB_HandleCrosshair(75);
		}
	MRGZ DCB 1
	Goto BarrelChange+2
	BarrelChange:
		TNT1 A 0 A_JumpIfInventory("Zoomed",1,"UnzoomBarrelChange")
		TNT1 AA 0
		TNT1 A 0{
		A_ClearOverlays(5, 6);
		A_TakeInventory("MG42HeatLevel", 200);
		A_TakeInventory("MG42HasOverheated");
		A_TakeInventory("MG42BarrelOverheat");
		A_Overlay(3, "ChangeBullet");
		}
		MGC1 ABCDEFGHIJKLMNO 1
		TNT1 A 0 A_PlaySound("MG42OP")
		MGC1 PQRSTUVWXYZ 1
		MGC2 ABCDEF 1
		TNT1 A 0 A_PlaySound("MG42RE")
		MGC2 GHIJKLMNOP 1
		TNT1 A 0 A_PlaySound("MG42IN")
		MGC2 QRSTUVWXYZ 1
		MGC3 ABCDEFG 1
		TNT1 A 0 A_PlaySound("MG42CL")
		MGC3 HIJKLMN 1
		MGRC ABC 1
		TNT1 A 0 A_PlaySound("MG42RC")
		MGRC DDDDCBA 1
		MGC3 OPQRST 1
		TNT1 A 0 A_Overlay(3, "Cooling")
		Goto Ready3
	Fire:
		TNT1 A 0 A_JumpIfInventory("MG42HasOverheated",1,"BarrelChange")
