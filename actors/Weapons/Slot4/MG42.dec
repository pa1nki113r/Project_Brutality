		TNT1 A 0 {
		if (CountInv("NewClip") >= 1 && CountInv("MG42HeatLevel") != 120) {
			return state ("ActualFire");
			}
		else if (CountInv("MG42HeatLevel") == 120) {
			return state ("Overheat");
			}
		else {
			return state ("");
			}
		}
		Goto EmptyFire
	
	MuzzleFlash:
		TNT1 A 0 A_Jump(128, "Flash1", "Flash2", "Flash3")
	Flash3:
		MGMZ EF 1 BRIGHT
		Stop
	Flash2:
		MGMZ CD 1 BRIGHT
		Stop
	Flash1:
		MGMZ AB 1 BRIGHT
		Stop
	
	BeltFlash:
		MGF5 A 0 A_JumpIfInventory("NewClip", 14, 5)
		MGF4 A 0 A_JumpIfInventory("NewClip", 12, 4)
		MGF3 A 0 A_JumpIfInventory("NewClip", 10, 3)
		MGF2 A 0 A_JumpIfInventory("NewClip", 8, 2)
		TNT1 A 0
		"####" ABCD 1
		Stop
	ActualFire:
		TNT1 A 0 {
		A_ClearOverlays(3, 6);
		A_Overlay(-3, "MuzzleFlash");
		A_Overlay(5, "BeltFlash");
		if(CountInv("MG42BarrelOverheat") >= 1) {
			A_GiveInventory("MG42HeatLevel",3);
			}
		else{
			A_GiveInventory("MG42HeatLevel", 1);
			}
		A_TakeInventory("NewClip", 1);
		A_PlaySound("MG42FIR", 1);
		A_FireBullets(5, 6, 1, 28, "MachineGunBulletPuff", 1);
		//A_Firecustommissile("MG42CaseSpawn",0,0,24,-20, 0, -50);
		PB_SpawnCasing("MG42Casing", 16, -3, 33,frandom(3, 8),frandom(-2,2),frandom(-6,-3));
		A_FireCustomMissile("ShakeYourAss", 0, 0, 0, 0);
		A_FireCustomMissile("MinigunTracer", random(-3,3), 0, -1, random(-3,3));
		A_FireCustomMissile("GunFireSmoke", 0, 0, 0, 0, 0, 0);
		A_AlertMonsters;
		PB_WeaponRecoil(-2.2,-0.6);
		}
		MGFI AB 1
		TNT1 A 0 A_Refire
		TNT1 A 0 A_Overlay(6, "BarrelSmoke1")
		MGFI CD 1
		TNT1 A 0 A_Overlay(3, "Cooling")
		Goto Ready3
	Overheat:
		TNT1 A 0 A_PlaySound("MG42HEAT")
		TNT1 A 0 A_GiveInventory("MG42HasOverheated")
		TNT1 A 0 A_GiveInventory("MG42BarrelOverheat")
		MG5R A 0 A_JumpIfInventory("NewClip", 14, 5)
		MG4R A 0 A_JumpIfInventory("NewClip", 12, 4)
		MG3R A 0 A_JumpIfInventory("NewClip", 10, 3)
		MG2R A 0 A_JumpIfInventory("NewClip", 8, 2)
		MG1R A 0
		"####" A 0
		"####" A 0 A_Overlay(3,"Cooling")
		"####" A 0 A_Overlay(6, "BarrelSmoke1")
		"####" A 45 A_DoPBWeaponAction(WRF_NOFIRE|WRF_NOSWITCH)
		Goto Ready3
	
	BeltZoomFlash:
		MGZ5 A 0 A_JumpIfInventory("NewClip", 14, 5)
		MGZ4 A 0 A_JumpIfInventory("NewClip", 12, 4)
		MGZ3 A 0 A_JumpIfInventory("NewClip", 10, 3)
		MGZ2 A 0 A_JumpIfInventory("NewClip", 8, 2)
		TNT1 A 0
		"####" A 0
		"####" AB 1
		MGZ3 A 0 A_JumpIfInventory("NewClip", 10, 3)
		MGZ2 A 0 A_JumpIfInventory("NewClip", 8, 2)
		TNT1 A 0
		"####" A 0
		"####" C 1
		Stop
	
	AltFire:
		TNT1 A 0 A_JumpIfInventory("Zoomed", 1, "Unzoom")
		TNT1 A 0 {
		A_GiveInventory("Zoomed", 1);
		A_GiveInventory("ADSMode", 1);
		A_PlaySoundEx("IronSights", "Auto");
		A_Overlay(5, "BeltZoomFlash");
		A_ZoomFactor(1.25);
		A_SetCrosshair(5);
		}
		MRGZ BCD 1
		Goto Ready2
	
	BeltUnzoomFlash:
		MGZ3 A 0 A_JumpIfInventory("NewClip", 10, 3)
		MGZ2 A 0 A_JumpIfInventory("NewClip", 8, 2)
		TNT1 A 0
		"####" A 0
		"####" C 1
		"####" A 0
		MGZ5 A 0 A_JumpIfInventory("NewClip", 14, 5)
		MGZ4 A 0 A_JumpIfInventory("NewClip", 12, 4)
		MGZ3 A 0 A_JumpIfInventory("NewClip", 10, 3)
		MGZ2 A 0 A_JumpIfInventory("NewClip", 8, 2)
		TNT1 A 0
		"####" A 0
		"####" BA 1
		Stop
	
	Unzoom:
		TNT1 A 0 {
		A_TakeInventory("Zoomed", 1);
		A_TakeInventory("ADSMode", 1);
		A_PlaySoundEx("IronSights", "Auto");
		A_Overlay(5, "BeltUnzoomFlash");
		A_ZoomFactor(1);
		PB_HandleCrosshair(75);
		}
		MRGZ DCB 1
		Goto Ready3
	
	Ready2:
		MG3Z A 0 A_JumpIfInventory("NewClip", 10, 3)
		MG2Z A 0 A_JumpIfInventory("NewClip", 8, 2)
		MG1Z A 0
		"####" A 0
		"####" A 1 {
		//Some ADS toggle stuff
		//I am sorry for YandereDev shit... i didn't code for a long time lol
		A_SetCrosshair(5);
		if(GetCvar("pb_toggle_aim_hold")) {
				if(!PressingAltfire() || JustReleased(BT_ALTATTACK) ) {
					return state("Unzoom");
				}
				if (PressingFire() && PressingAltfire() && CountInv("NewClip") > 1 && CountInv("MG42HeatLevel") < 120)
							{
							Return State("Fire2");
							}
					else if (PressingFire() && PressingAltfire() && CountInv("NewClip") > 1 && CountInv("MG42HeatLevel") == 120) {
							Return State ("UnzoomOverheat");
						}
					else if (PressingFire() && PressingAltfire() && CountInv("NewClip") <= 1) {
							Return State ("Unzoom");
						}
				return A_DoPBWeaponAction(WRF_ALLOWRELOAD|WRF_NOSECONDARY);
			}
		else {
			return A_DoPBWeaponAction;
		}
	}
	Loop
	
	BeltFlashZoomFire:
		MZF3 A 0 A_JumpIfInventory("NewClip", 10, 3)
		MZF2 A 0 A_JumpIfInventory("NewClip", 8, 2)
		TNT1 A 0
		"####" A 0
		"####" AC 1
		Stop
	BeltFlashZoomFireFinished:
		TNT1 B 1{
			if(CountInv("NewClip") >= 10) {A_SetOverlaySprite(5, "MZF3");}
			else if (CountInv("NewClip")  == 8 || CountInv("NewClip")  == 9)  {A_SetOverlaySprite(5, "MZF2");}
		}
		STOP
		
	MuzzleFlashZoom:
		TNT1 A 0 A_Jump(128, "MuzzleZoom1", "MuzzleZoom2", "MuzzleZoom3")
	MuzzleZoom1:
		MGZM A 1 BRIGHT
		Stop
	MuzzleZoom2:
		MGZM B 2 BRIGHT
		Stop
	MuzzleZoom3:
		MGZM C 1 BRIGHT
		Stop
	Fire2:
		TNT1 A 0 A_JumpIfInventory("MG42HasOverheated",1,"UnzoomBarrelChange")
		TNT1 A 0 {
		if (CountInv("NewClip") >= 1 && CountInv("MG42HeatLevel") != 120) {
			return state ("ActualFire2");
			}
		else if (CountInv("MG42HeatLevel") == 120) {
			return state ("UnzoomOverheat");
			}
		else {
			return state ("Unzoom");
			}	
		}	
		Goto Ready2
	ActualFire2:
		TNT1 A 0 {
		A_ClearOverlays(3, 4);
		A_Overlay(-3, "MuzzleFlashZoom");
		A_Overlay(5, "BeltFlashZoomFire");
		if(CountInv("MG42BarrelOverheat") >= 1) {
			A_GiveInventory("MG42HeatLevel",4);
			}
		else{
			A_GiveInventory("MG42HeatLevel", 2);
			}
		A_TakeInventory("NewClip", 1);
		A_PlaySound("MG42FIR", 1);
		A_FireBullets(5, 5, 1, 28, "MachineGunBulletPuff", 1);
		PB_SpawnCasing("MG42Casing", 20, -3, 36,frandom(3, 8),frandom(-2,2),frandom(-6,-3));
		A_FireCustomMissile("ShakeYourAss", 0, 0, 0, 0);
		A_FireCustomMissile("MinigunTracer", random(-3,3), 0, -1, random(-3,3));
		A_FireCustomMissile("GunFireSmoke", 0, 0, 0, 0, 0, 0);
		A_AlertMonsters;
		PB_WeaponRecoil(-2.0,-0.5);
		}
		MGZF AB 1
		TNT1 A 0 {
		if (CountInv("MG42HeatLevel") == 120) {
			return state ("UnzoomOverheat");
			}
		else {
			A_Overlay(3, "Cooling");
			return state ("FinishedZoomFire");
			}	
		}
	FinishedZoomFire:
		TNT1 A 0 {		
			if(GetCvar("pb_toggle_aim_hold")) {
				if(JustReleased(BT_ALTATTACK)){
					return state("UnZoom");
				}
		
				if (PressingFire() && PressingAltfire()){
						return state("Fire2");
				}
			}
			else {
				if(PressingAltfire()){
					return state("UnZoom");
				}
				A_Refire("Fire2");
			}
			return state("");
		}
		MGZF C 1 A_Overlay(5, "BeltFlashZoomFireFinished")
		MG1Z A 1 {
			if(CountInv("NewClip") >= 10) {A_SetWeaponSprite("MG3Z");}
			if(CountInv("NewClip") == 8 || CountInv("NewClip") == 9) {A_SetWeaponSprite("MG2Z");}
			}
		TNT1 A 0 A_Overlay(3, "Cooling")
		Goto Ready2
	
	FlashKicking:
		MGK5 A 0 A_JumpIfInventory("NewClip", 14, 5)
		MGK4 A 0 A_JumpIfInventory("NewClip", 12, 4)
		MGK3 A 0 A_JumpIfInventory("NewClip", 10, 3)
		MGK2 A 0 A_JumpIfInventory("NewClip", 8, 2)
		MGKI  A 0
		"####" A 0
		"####" BCD 1
		MGKI EFGHHGFE 1
