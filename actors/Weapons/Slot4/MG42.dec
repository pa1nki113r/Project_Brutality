	SelectBelt:
		MGS5 A 0 A_JumpIfInventory("NewClip", 14, 5)
		MGS4 A 0 A_JumpIfInventory("NewClip", 12, 4)
		MGS3 A 0 A_JumpIfInventory("NewClip", 10, 3)
		MGKS A 0 A_JumpIfInventory("NewClip", 8, 2)
