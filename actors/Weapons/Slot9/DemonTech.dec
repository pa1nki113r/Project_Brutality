ACTOR TossedHellRifle
{
	SpawnID 9900
    Radius 8
    Height 8
	Scale 0.48
	Speed 8
	Mass 1
    gravity 0.5
	Decal BrutalBloodSplat
	BounceFactor 0.4
	BounceCount 3
	+DOOMBOUNCE
    +MOVEWITHSECTOR
    //+CLIENTSIDEONLY
    +NOBLOCKMAP
    +NOTELEPORT
    +MISSILE
	-EXPLODEONWATER
	+DONTSPLASH
	+Rollsprite
    States
    {
	Spawn.V5:
		TNT1 A 0 A_jumpif( V5_MODELS == 0 , "Spawn")
		VRPU A 2 A_SetRoll(roll+30)
	Spawn:
		TNT1 A 0 NoDelay A_jumpif( V5_MODELS == 1 , "Spawn.V5")
		HRPU A 2 A_SetRoll(roll+30)
		LOOP		
	Death:
		TNT1 A 0 A_jumpif( V5_MODELS == 1 , "Death.V5")
	    HRPU A 1 A_SetRoll(0)
        TNT1 A 0 A_SpawnItemEx("Hellgun",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | 288)
        Stop
	Death.V5:
		VRPU A 1 A_SetRoll(0)
        TNT1 A 0 A_SpawnItemEx("Hellgun",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | 288)
        Stop
		
	
	ReplaceVanilla:
		TNT1 A 1
		TNT1 A 0 A_SpawnItemEx("NewShell",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | 288)
		Stop
    }
}

ACTOR Hellgun : PB_UpgradeItem
{
	Inventory.PickupSound "HRPickup"
	Inventory.PickupMessage "You got the Demon Tech Rifle! (Slot 0)"
	Scale 0.48
	States
	{
	Spawn.V5:
		VRPU A 10 {
			IF( A_CHECKRANGE( V5_MDist , "NULL", TRUE) ) {A_SetSpawnSprite("HRPU");}
			}
	Spawn:
		TNT1 A 0 NoDelay A_jumpif( V5_MODELS == 1 && V5_Cull == 1, "Spawn.V5")
		HRPU A 10 {
				if ( GetCvar( "V5_MODELS" ) == 1 && GetCVar( "V5_Cull" ) == 0 ) {A_SetSpawnSprite("VRPU");}
		}
		LOOP
	Pickup:
        TNT1 A 0 A_GiveInventory ("Hell_rifle")
		Stop
	}
}

