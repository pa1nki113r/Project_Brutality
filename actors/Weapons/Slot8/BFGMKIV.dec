Actor Blackhole_Ball
{
	Radius 13
	Height 8
	Speed 17
	Damage 30
	Projectile
	+FORCEXYBILLBOARD
	+NODAMAGETHRUST
	+NOBOSSRIP
	+Friendly
	//+FORCERADIUSDMG
	-THRUGHOST
	+Ripper
	Renderstyle Normal
	Damagetype BlackHole
	Scale 0.26
	DeathSound "weapons/bh_blast"
	States
	{
