					}
				else {
					A_SetPitch(pitch-1.9, SPF_INTERPOLATE);
					A_SetAngle(angle-1.8, SPF_INTERPOLATE);
				}
			}
		41V1 J 1 BRIGHT {
				A_ZoomFactor(1.0);
			if (CountInv("PowerStrength") >= 1 ) {
					A_SetPitch(pitch-0.95, SPF_INTERPOLATE);
					A_SetAngle(angle-0.9, SPF_INTERPOLATE);
					}
				else {
					A_SetPitch(pitch-1.9, SPF_INTERPOLATE);
					A_SetAngle(angle-1.8, SPF_INTERPOLATE);
				}
		}
		41V1 K 1 {
			if (CountInv("PowerStrength") >= 1 ) {
					A_SetPitch(pitch-0.95, SPF_INTERPOLATE);
					A_SetAngle(angle-0.9, SPF_INTERPOLATE);
					}
				else {
					A_SetPitch(pitch-1.9, SPF_INTERPOLATE);
					A_SetAngle(angle-1.8, SPF_INTERPOLATE);
				}
		}
		41V1 L 1
		41V1 M 1 {
			A_SetFiringRightWeapon(False);
			if(CountInv("LeftRevolverAmmo")>0 || CountInv("RevolverAmmo")<=0 ){
				A_TakeInventory("DualFiring",1);
			}
		}
		41V1 N 1
		41V1 OOO 1 {
			if(JustPressed(BT_ALTATTACK) && !A_IsFiringRightWeapon()){
				if(CountInv("RevolverAmmo") > 0){
					return state("FireRight_Overlay");
				}
				else {
					A_PlaySoundEx("weapons/empty", "Auto");
					return state("");
				}
			}
			return state("");
		}
		TNT1 A 0 {
			if(CountInv("RevolverAmmo")<=0){
				A_GiveInventory("DualFireReload",1);
			}
		}
		Goto IdleRight_Overlay
		
	WeaponSpecial:
		TNT1 A 0 {
			A_GiveInventory("PB_LockScreenTilt",1);
			A_Takeinventory("GoWeaponSpecialAbility",1);
			PB_HandleCrosshair(42);
			A_ZoomFactor(1.0);
			A_ClearOverlays(10,11);
			A_PlaySoundEx("Ironsights", "Auto");
		}
		TNT1 A 0 A_JumpIfInventory("Revolver", 2,"SwitchToDualWield")
		TNT1 A 0 A_print("You need two revolvers to dual wield!")
		Goto Ready3
	SwitchToDualWield:
        	TNT1 A 0 {
        	    if (A_CheckAkimbo()) {
        	        A_SetAkimbo(False);
        	        A_Takeinventory("DualWieldingRevolver",1); // this
        	        return state("SwitchFromDualWield");
        	    }
        	    else {
        	        A_SetAkimbo(True);
        	        A_Giveinventory("DualWieldingRevolver",1); // and this
        	        return state("");
        	    }
        	}
		R3V1 ABCDE 1 A_SetRoll(roll+.8, SPF_INTERPOLATE)
		R3V1 E 1
		R3V1 EFGHI 1 A_SetRoll(roll-.8, SPF_INTERPOLATE)
		Goto ReadyDualWield
	SwitchFromDualWield:
		R3V2 ABCDE 1 A_SetRoll(roll-.8, SPF_INTERPOLATE)
		R3V2 E 1
		R3V2 EFGHI 1 A_SetRoll(roll+.8, SPF_INTERPOLATE)
		Goto Ready3
	
	Deselect:
		TNT1 A 0 {
			A_WeaponOffset(0,32);
			A_SetRoll(0);
			PB_HandleCrosshair(42);
			A_Takeinventory("Unloading",1);
			A_TakeInventory("PB_LockScreenTilt",1);
			A_ClearOverlays(10,11);
		}
		TNT1 A 0 A_JumpIfInventory("GotMeatShield", 1, "GrabEnemy")
		TNT1 A 0 A_JumpIfInventory("Deagle",1,"DeselectUpgrade")
		40V1 FGHI 0 
		R1V1 FGHI 1 {
			if (A_CheckAkimbo()) {
				A_SetWeaponSprite("40V1");
			}
		}
		TNT1 AAAAAAAAAAAAAAAAAA 0 A_Lower
		Wait
		
	DeselectUpgrade:
		TNT1 AAAAAAAAAAAAAAAAAA 0 A_LOWER
		Wait	
	Select:
		TNT1 A 0
		Goto SelectFirstPersonLegs
		SelectContinue:
		TNT1 A 0 A_SelectWeapon("Deagle")
