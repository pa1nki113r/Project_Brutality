		A1F1 E 1 {
			if (PressingFire() && PressingAltfire() && CountInv("SMGAmmo") > 0){
					return state("Fire");
			}
			if (PressingFire() && CountInv("SMGAmmo") > 0){
					return state("Fire");
			}
			return A_DoPBWeaponAction(WRF_ALLOWRELOAD, CheckUnloaded("UACSMGHasUnloaded"));	
		}
		Loop
		
