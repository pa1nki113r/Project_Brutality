    +WEAPON.NOAUTOAIM
    +WEAPON.NOAUTOFIRE
	+WEAPON.NOALERT
	+WEAPON.NO_AUTO_SWITCH
    Scale 0.80
	PB_WeaponBase.UnloaderToken "PBPistolHasUnloaded"

