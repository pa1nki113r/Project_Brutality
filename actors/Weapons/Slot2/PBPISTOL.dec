	LoadChamber:
		TNT1 A 0
		TNT1 A 0 A_PlaySound("IronSights", 0)
		DEGR H 1 A_PlaySound("PSRLFIN", 1)
		DEGR IJK 1 
		DEGR LMNO 1
		DEGG A 1
		TNT1 A 0 A_Takeinventory("Reloading",1)
		TNT1 A 0 A_Takeinventory("PBPistolWasEmpty",1)
