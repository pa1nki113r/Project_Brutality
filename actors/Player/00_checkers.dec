actor FingerCrunch
{
    Radius 0
    Height 0
    +NOINTERACTION
    +ISMONSTER

    Obituary "%o got %p fingers pinched off."

    States
    {
      Spawn:
        TNT1 A 0
        TNT1 A 0 A_LookEx(LOF_NOSOUNDCHECK, 0, 24, 0, 360, "Kill")
        stop

      Kill:
        TNT1 A 0 A_CustomMissile("FingerCruncher")
        stop
    }
}

actor FingerCruncher
{
    Obituary "%o got %p fingers pinched off."
    +NOINTERACTION

    States
    {
      Spawn:
        TNT1 A 0
        goto Death

      Death:
        TNT1 A 1 A_Explode(40, 8)
        stop
    }
}
