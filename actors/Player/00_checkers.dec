actor ParkmoreHeightFinder
{
    Height 1
    Radius 4
    MaxStepHeight 256

    +MOVEWITHSECTOR
    +CANPASS
    +ACTLIKEBRIDGE
    +SERVERSIDEONLY
    +NOBLOCKMAP
    +NOTIMEFREEZE

    Gravity 32767

    RenderStyle Add
    Alpha 0.2

    States
    {
      Spawn:
        TNT1 A 0
        TNT1 A 1 ACS_ExecuteAlways(395, 0, 0,16,3)
//        PLSS A 70 bright
        loop
    }
}

actor ParkmoreHeightTrailSpawner
{
    +NOINTERACTION
    +CLIENTSIDEONLY

    reactiontime 350

    States
    {
      Spawn:
        TNT1 A 0 A_Countdown
        TNT1 A 1 ACS_ExecuteAlways(395, 0, 0,16,3)
        loop

      Death:
        TNT1 A 0
        stop
    }
}

actor ParkmoreHeightTrail
{
    +NOINTERACTION
    +CLIENTSIDEONLY
    +NOTIMEFREEZE

    Radius 0
    Height 0

    RenderStyle Add
    Alpha 0.3
    Scale 0.4

    Translation "192:207=208:223", "240:243=232:235", "244:247=76:79"

    States
    {
      Spawn:
        TNT1 AAAAAAAAAAAAAAAAA 1 bright A_FadeOut(random(2,8)*0.001)
        loop
    }
}


