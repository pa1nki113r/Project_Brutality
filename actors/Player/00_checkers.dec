actor ParkmoreChecker: FastProjectile
{
    Projectile
    Speed 64
    Radius 4
    Height 1
    Damage 0
    +CANNOTPUSH
    +NODAMAGETHRUST
    +SERVERSIDEONLY
    +PUFFGETSOWNER
    +NOTIMEFREEZE
    +MOVEWITHSECTOR

    -ACTIVATEIMPACT
    -ACTIVATEPCROSS

    States
    {
      Spawn:
        TNT1 A 1
        stop

      Death:
        TNT1 A 0 A_Stop
        TNT1 A 0 A_GiveToTarget("CanWallBounce")
        stop
    }
}

